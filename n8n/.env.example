# n8n Environment Variables
# Copy to .env and fill in values

# ===========================================
# n8n CONFIG
# ===========================================

N8N_HOST=n8n.smartflow.example.com
N8N_PROTOCOL=https
WEBHOOK_URL=https://n8n.smartflow.example.com

# Basic Auth
N8N_USER=admin
N8N_PASSWORD=your_secure_password_here

# ===========================================
# PERSONAPLEX GPU SERVER
# ===========================================

# Cloudflare Tunnel URL to GPU server
PERSONAPLEX_URL=https://voice.smartflow.example.com
PERSONAPLEX_API_KEY=your_api_key_here

# ===========================================
# FIREBASE
# ===========================================

FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com

# Base64 encoded private key (for Docker compatibility)
# Generate: cat serviceAccountKey.json | base64
FIREBASE_PRIVATE_KEY=base64_encoded_private_key

# ===========================================
# WHATSAPP (OPTIONAL)
# ===========================================

WHATSAPP_PHONE_ID=your_phone_id
WHATSAPP_ACCESS_TOKEN=your_access_token
WHATSAPP_VERIFY_TOKEN=your_verify_token

# ===========================================
# TIMEZONE
# ===========================================

TZ=Europe/Istanbul
