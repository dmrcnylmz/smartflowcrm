# Personaplex Server Environment Variables
# Copy to .env and fill in values

# ===========================================
# REQUIRED
# ===========================================

# HuggingFace token for model download
# Get from: https://huggingface.co/settings/tokens
HF_TOKEN=hf_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# API key for securing endpoints
# Generate with: openssl rand -hex 32
PERSONAPLEX_API_KEY=your_api_key_here

# ===========================================
# SERVER CONFIG
# ===========================================

HOST=0.0.0.0
PORT=8998
DEVICE=cuda

# ===========================================
# LIMITS
# ===========================================

# Max concurrent voice sessions
MAX_SESSIONS=4

# Session timeout in seconds
SESSION_TIMEOUT=300

# ===========================================
# SECURITY
# ===========================================

# Comma-separated allowed origins for CORS
# Use * for development, specific origins for production
ALLOWED_ORIGINS=https://smartflow.example.com,https://n8n.example.com

# ===========================================
# MODEL (optional)
# ===========================================

# Override default model
# MODEL_NAME=nvidia/personaplex-7b-v1
